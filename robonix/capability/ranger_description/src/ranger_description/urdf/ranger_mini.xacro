<?xml version="1.0"?>

<robot name="ranger_description" 
    xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:include filename="$(find ranger_description)/urdf/ranger_l.xacro" />
    <xacro:include filename="$(find ranger_description)/urdf/ranger_r.xacro" />

    <!-- Variables -->
    <xacro:property name="M_PI" value="3.14159"/>

    <!-- Vehicle Geometries -->
    <xacro:property name="base_x_size" value="1.0" />
    <xacro:property name="base_y_size" value="0.380000" />
    <xacro:property name="base_z_size" value="0.210000" />

    <xacro:property name="wheelbase" value="0.498" />
    <xacro:property name="track" value="0.58306" />
    <xacro:property name="wheel_vertical_offset" value="-0.0702" />

    <xacro:property name="wheel_length" value="1.1653e-01" />
    <xacro:property name="wheel_radius" value="1.6459e-01" />

    <!-- Base link -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 0 3.14 " />
            <geometry>
                <mesh filename="package://ranger_description/meshes/ranger_base.dae" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.008" rpy="0 0 0" />
            <geometry>
                <box size="1 1 1"/>
            </geometry>
        </collision>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="1 1 1"/>
            </geometry>
        </collision>
    </link>

   <link name="fl_steering_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 0 3.14 " />
            <geometry>
                <cylinder radius="0.001" length="0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.008" rpy="0 0 0" />
            <geometry>
                <box size="1 1 1"/>
            </geometry>
        </collision>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.001" length="0.001"/>
            </geometry>
        </collision>
    </link>
    <joint name="fl_steering_wheel" type="revolute">
        <origin xyz="0.23 0.206 -0.1" rpy="0 0 0" />
        <parent link="base_link"/>
        <child link="fl_steering_wheel_link"/>
        <axis xyz="0 0 1" rpy="0 0 0" />
        <limit effort="5" velocity="6.28"  lower="-2.1" upper="2.1" />
    </joint>

        <link name="fl_wheel_link">
            <inertial>
                <mass value="8" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.1171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.1171" />
            </inertial>
            <visual>
                <origin xyz="0.23 -0.2 0.1" rpy="1.57 0 0" />
                <geometry>
                    <mesh filename="package://ranger_description/meshes/fr.dae" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <cylinder length="0.1" radius="0.1" />
                </geometry>
                     <contact>
                         <ode>
                        <min_depth>0.001</min_depth>
                         </ode>
                    </contact>
            </collision>
        </link>

        <joint name="fl_wheel" type="continuous">
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <parent link="fl_steering_wheel_link"/>
            <child link="fl_wheel_link"/>
            <axis xyz="0 0 1" rpy="0 0 0" />
        </joint>


   <link name="fr_steering_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 0 3.14 " />
            <geometry>
                <cylinder radius="0.001" length="0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.008" rpy="0 0 0" />
            <geometry>
                <box size="1 1 1"/>
            </geometry>
        </collision>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.001" length="0.001"/>
            </geometry>
        </collision>
    </link>
    <joint name="fr_steering_wheel" type="revolute">
        <origin xyz="0.23 -0.206 -0.1" rpy="0 0 0" />
        <parent link="base_link"/>
        <child link="fr_steering_wheel_link"/>
        <axis xyz="0 0 1" rpy="0 0 0" />
        <limit effort="5" velocity="6.28"  lower="-2.1" upper="2.1" />
    </joint>

        <link name="fr_wheel_link">
            <inertial>
                <mass value="8" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.1171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.1171" />
            </inertial>
            <visual>
                <origin xyz="0.23 0.2 0.1" rpy="1.57 0 0" />
                <geometry>
                    <mesh filename="package://ranger_description/meshes/fl.dae" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <cylinder length="0.1" radius="0.1" />
                </geometry>
                     <contact>
                         <ode>
                        <min_depth>0.001</min_depth>
                         </ode>
                    </contact>
            </collision>
        </link>

        <joint name="fr_wheel" type="continuous">
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <parent link="fr_steering_wheel_link"/>
            <child link="fr_wheel_link"/>
            <axis xyz="0 0 1" rpy="0 0 0" />
        </joint>


   <link name="rl_steering_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 0 3.14 " />
            <geometry>
                <cylinder radius="0.001" length="0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.008" rpy="0 0 0" />
            <geometry>
                <box size="1 1 1"/>
            </geometry>
        </collision>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.001" length="0.001"/>
            </geometry>
        </collision>
    </link>
    <joint name="rl_steering_wheel" type="revolute">
        <origin xyz="-0.23 0.206 -0.1" rpy="0 0 0" />
        <parent link="base_link"/>
        <child link="rl_steering_wheel_link"/>
        <axis xyz="0 0 1" rpy="0 0 0" />
        <limit effort="5" velocity="6.28"  lower="-2.1" upper="2.1" />
    </joint>


        <link name="rl_wheel_link">
            <inertial>
                <mass value="8" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.1171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.1171" />
            </inertial>
            <visual>
                <origin xyz="0.23 -0.2 0.1" rpy="1.57 0 0" />
                <geometry>
                    <mesh filename="package://ranger_description/meshes/fr.dae" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <cylinder length="0.1" radius="0.1" />
                </geometry>
                     <contact>
                         <ode>
                        <min_depth>0.001</min_depth>
                         </ode>
                    </contact>
            </collision>
        </link>

        <joint name="rl_wheel" type="continuous">
            <origin xyz="0.0 0.0 0.0 " rpy="0 0 0" />
            <parent link="rl_steering_wheel_link"/>
            <child link="rl_wheel_link"/>
            <axis xyz="0 0 1" rpy="0 0 0" />
        </joint>


   <link name="rr_steering_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 0 3.14 " />
            <geometry>
                <cylinder radius="0.001" length="0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.008" rpy="0 0 0" />
            <geometry>
                <box size="1 1 1"/>
            </geometry>
        </collision>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.001" length="0.001"/>
            </geometry>
        </collision>
    </link>
    <joint name="rr_steering_wheel" type="revolute">
        <origin xyz="-0.23 -0.206 -0.1" rpy="0 0 0" />
        <parent link="base_link"/>
        <child link="rr_steering_wheel_link"/>
        <axis xyz="0 0 1" rpy="0 0 0" />
        <limit effort="5" velocity="6.28"  lower="-2.1" upper="2.1" />
    </joint>

        <link name="rr_wheel_link">
            <inertial>
                <mass value="8" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.1171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.1171" />
            </inertial>
            <visual>
                <origin xyz="0.23 0.2 0.1" rpy="1.57 0 0" />
                <geometry>
                    <mesh filename="package://ranger_description/meshes/fl.dae" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <cylinder length="0.1" radius="0.1" />
                </geometry>
                     <contact>
                         <ode>
                        <min_depth>0.001</min_depth>
                         </ode>
                    </contact>
            </collision>
        </link>

        <joint name="rr_wheel" type="continuous">
            <origin xyz="0.0 0.0 0.0 " rpy="0 0 0" />
            <parent link="rr_steering_wheel_link"/>
            <child link="rr_wheel_link"/>
            <axis xyz="0 0 1" rpy="0 0 0" />
        </joint>

        <!-- 定义长方体link -->
        <link name="box_link">
            <visual>
                <origin xyz="0 0 0.15" rpy="0 0 0" />
                <geometry>
                    <box size="0.5 0.3 0.25" />
                </geometry>
                <material name="gray">
                    <color rgba="0.7 0.7 0.7 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0.15" rpy="0 0 0" />
                <geometry>
                    <box size="0.5 0.3 0.25" />
                </geometry>
            </collision>
            <inertial>
                <mass value="2.0" />  <!-- 假设质量2kg -->
                <origin xyz="0 0 0.15" />
                <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
            </inertial>
        </link>

        <!-- 将长方体固定到base_link -->
        <joint name="box_joint" type="fixed">
            <origin xyz="0.03 0 0" rpy="0 0 0" />  <!-- 放在base_link上方 -->
            <parent link="base_link"/>
            <child link="box_link"/>
        </joint>

        <!-- 包含RealSense模型 -->
        <xacro:include filename="$(find realsense2_description)/urdf/_d435i.urdf.xacro" />
        
        <!-- 在长方体前方安装RealSense -->
        <xacro:sensor_d435i parent="box_link"  name="camera_435i" use_nominal_extrinsics="true">
            <origin xyz="0.25 0 0.15" rpy="0 0 0"/>  <!-- 放在长方体前方中间位置 -->
        </xacro:sensor_d435i>

        <!-- Mid360激光雷达链接 -->
        <link name="livox_frame">
        <visual>
            <geometry>
            <box size="0.08 0.08 0.05"/>  <!-- 用蓝色盒子表示激光雷达 -->
            </geometry>
            <material name="blue">
            <color rgba="0.0 0.0 1.0 1.0"/>  <!-- 蓝色 -->
            </material>
        </visual>
        <collision>
            <geometry>
            <box size="0.08 0.08 0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
        </link>

        <!-- 连接箱子和激光雷达的关节 -->
        <joint name="box_to_mid360_joint" type="fixed">
        <parent link="box_link"/>
        <child link="livox_frame"/>
        <origin xyz="0.15 0.0 0.275" rpy="0 0 0"/>  <!-- 前上方，22.5度 = 0.3927弧度 -->
        </joint>

        <!-- Pure virtual base_ground link (coordinate frame only) -->
        <link name="base_ground">
            <inertial>
                <mass value="0.000001" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.000000001" ixy="0" ixz="0" iyy="0.000000001" iyz="0" izz="0.000000001" />
            </inertial>
        </link>

        <!-- Fixed joint connecting base_link to base_ground -->
        <joint name="base_ground_joint" type="fixed">
            <origin xyz="0 0 -0.2" rpy="0 0 0" /> 
            <parent link="base_link"/>
            <child link="base_ground"/>
        </joint>

</robot>
